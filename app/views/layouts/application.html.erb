<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav>
      <% if user_signed_in? %>
        <%= link_to t('views.layouts.logout'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t('views.layouts.sign_up'), new_user_registration_path  %>
        <%= link_to t('views.layouts.login'), new_user_session_path  %>
      <% end %>
    </nav>
  </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
